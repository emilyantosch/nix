    Alt+Ctrl+WheelScrollLeft        { focus-column-left; }
    Alt+Ctrl+Shift+WheelScrollDown { move-column-right; }
    Alt+Ctrl+Shift+WheelScrollUp   { move-column-left; }

    // Example volume keys mappings for PipeWire & WirePlumber.
